 вклада в сходимость интеграла на нуле и бесконечности.
\end_layout

\begin_layout Definition
2) 
\begin_inset Formula $\Gamma(a)=\int_{0}^{\infty}x^{a-1}e^{-x}dx=(\text{по частям})=\underbrace{\frac{x^{a}}{a}e^{-x}|_{0}^{\infty}}_{=0}+\int_{0}^{\infty}\frac{x^{a}}{a}e^{-x}dx=\frac{1}{a}\underbrace{\int_{0}^{\infty}x^{a}e^{-x}dx}_{\Gamma(a+1)}$
\end_inset

.
 Отсюда 
\begin_inset Formula $\Gamma(a+1)=a\Gamma(a)$
\end_inset

.
\end_layout

\begin_layout Definition
3) 
\begin_inset Formula $\Gamma(1)=\int_{0}^{\infty}e^{-x}dx=-e^{-x}|_{0}^{\infty}=1$
\end_inset

.
 Отсюда, 
\begin_inset Formula $\Gamma(2)=1\Gamma(1)=1$
\end_inset

, 
\begin_inset Formula $\Gamma(3)=2\Gamma(2)=2$
\end_inset

, 
\begin_inset Formula $\Gamma(4)=3\Gamma(3)=6$
\end_inset

.
 Таким образом, 
\begin_inset Formula $\Gamma(a+1)=a!$
\end_inset

.
\end_layout

